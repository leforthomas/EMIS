<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:com.metaaps.webapps.libraries.client.widget">
    <ui:style>

        .panel {
            width: 250px;
            overflow: hidden;
            padding: 10px;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.panel}">
        <g:HTMLPanel addStyleNames="introjs-tooltiptext" ui:field="content"></g:HTMLPanel>
        <g:HTMLPanel addStyleNames="introjs-bullets">
            <widget:UnOrderedList ui:field="listBullets"></widget:UnOrderedList>
        </g:HTMLPanel>
        <div class="introjs-tooltipbuttons">
            <g:Anchor addStyleNames="introjs-button introjs-skipbutton" ui:field="skip">Skip</g:Anchor>
            <g:Anchor addStyleNames="introjs-button introjs-prevbutton" ui:field="back">Back</g:Anchor>
            <g:Anchor addStyleNames="introjs-button introjs-nextbutton" ui:field="next">Next</g:Anchor>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>