<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.geocento.webapps.earthimages.emis.application.client.widgets.TimeGrid.Style">

        .sliderBar {
            padding: 3px 0px 0px;
        }

        .timeLabel {
            padding-left: 5px;
            font-size: 0.6em;
            white-space: nowrap;
        }

        .timeTick {
            display: inline-block;
            top: 0;
            height: 3px;
            border-left: 1px solid white;
        }

        .timeTickLarge {
            height: 10px;
        }

        .timeGrid {
            overflow: visible !important;
            line-height: 0;
            border-top: 1px solid white;
            color: white;
        }

        .productTick {
            border-left: 5px solid transparent;
            border-right: 5px solid transparent;
            height: 0;
            width: 0;
        }

        .productArchiveTick {
            border-bottom: 5px solid #cc3333;
        }

        .productFutureTick {
            border-bottom: 5px solid #cccc33;
        }

        .originalTimeFrame {
            border-top: 1px solid #cccc33;
            height: 0px;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.sliderBar}">
        <g:AbsolutePanel width="100%" height="100%" addStyleNames="{style.timeGrid}" ui:field="timeGrid"></g:AbsolutePanel>
    </g:HTMLPanel>
</ui:UiBinder>