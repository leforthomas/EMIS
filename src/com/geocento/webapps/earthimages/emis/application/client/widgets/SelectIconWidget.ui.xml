<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.metaaps.webapps.libraries.client.widget">
	<ui:style>
        .panel {
            white-space: nowrap;
        }
        .panel > * {
            display: inline-block;
            padding-right: 3px;
            vertical-align: middle;
        }
    </ui:style>
	<ui:with field="res" type="com.geocento.webapps.earthimages.emis.application.client.style.StyleResources" />
	<g:HTMLPanel addStyleNames="{style.panel}" ui:field="panel">
        <widget:StateSelectedBox ui:field="selectedBox"></widget:StateSelectedBox>
        <g:Image addStyleNames="{res.style.unselectable}" ui:field="labelIcon"></g:Image>
        <g:Label ui:field="label"></g:Label>
	</g:HTMLPanel>
</ui:UiBinder> 